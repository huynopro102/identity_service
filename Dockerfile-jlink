# Stage 1: Build ứng dụng Spring Boot với Maven
FROM maven:3.9.6-eclipse-temurin-21-alpine AS build
WORKDIR /app
COPY . /app
RUN mvn clean package -DskipTests

# Stage 2: JLink để tạo runtime tối ưu
FROM eclipse-temurin:21-jdk-alpine AS jlink-build
WORKDIR /app
COPY --from=build /app/target/*.jar /app/app.jar
# Xác định các module cần thiết cho ứng dụng
RUN jlink --module-path $JAVA_HOME/jmods \
    --add-modules java.base,java.logging,java.xml,java.sql,java.management,java.naming,jdk.unsupported,java.desktop,java.security.jgss \
    --output /custom-runtime


# Stage 3: Run ứng dụng với runtime tối ưu
FROM alpine:latest
WORKDIR /app
RUN apk add --no-cache libc6-compat  # Đảm bảo hỗ trợ Java trên Alpine
RUN addgroup -S appgroup && adduser -S appuser -G appgroup
USER appuser

COPY --from=jlink-build /custom-runtime /custom-runtime
COPY --from=jlink-build /app/app.jar app.jar

EXPOSE 9000
ENV PATH="/custom-runtime/bin:$PATH"

ENTRYPOINT ["java", "-jar", "/app/app.jar", "--server.port=9000", "--spring.profiles.active=dev"]
